<form class="{{cssClass}} lancer-sheet" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header card clipped-bot">
    <div class="header-fields">
      <h1 class="charname"><input class="header-field" name="name" type="text" value="{{item.name}}" placeholder="{{localize "lancer.placeholder.name"}}"/></h1>
    </div>
    {{{ ref-portrait-img item.img "img" mm }}}
  </header>
  
  {{{textarea-card "DESCRIPTION" "mm.Description"}}}
  
  </div>
  <div class="flexcol" style="margin: 10px;">
    <div class="lancer-title">
      <span class="major">BASE FEATURES</span>
    </div>

    {{{item-preview-list "system.base_features" "npc_feature" "uuid-ref"}}}
  </div>

  <div class="flexcol" style="margin: 10px;">
    <div class="lancer-title">
      <span class="major">OPTIONAL FEATURES</span>
    </div>

    {{#each mm.OptionalFeatures as |feature feature_index|}}
      {{{npc-feat-preview (concat "mm.OptionalFeatures." feature_index) trash-action="splice" }}}
    {{/each}}
    {{{item-preview-list "system.optional_features" "npc_feature" "uuid-ref"}}}
  </div>
</form>
