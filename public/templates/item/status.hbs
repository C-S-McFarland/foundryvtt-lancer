<form class="{{cssClass}} lancer-sheet" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="sheet-header card clipped-bot">
      <div class="flexrow">
        <div class="header-fields">
          <h1 class="charname">
            <input
              class="header-field"
              name="name"
              type="text"
              value="{{item.name}}"
              placeholder="{{localize "lancer.placeholder.name"}}"
            />
          </h1>
          <div class="flexrow">
            <select class="header-field" name="system.type" data-type="String">
              {{#select system.type}}
              <option class="i--dark" value="status">STATUS</option>
              <option class="i--dark" value="condition">CONDITION</option>
              <option class="i--dark" value="effect">EFFECT</option>
              {{/select}}
            </select>
          </div>
        </div>
        {{{ ref-portrait-img item.img "img" item }}}
      </div>
    </header>
  
    {{!-- Sheet Body --}}
    <section class="sheet-body">
      {{{item-edit-effect "system.terse"}}}
      {{{textarea-card "DESCRIPTION" "system.effects"}}}
    </section>
  </form>
