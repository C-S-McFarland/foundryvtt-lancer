<form class="{{cssClass}} lancer-sheet" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header card clipped-bot">
    <div class="flexcol grow">
      <h1 class="charname"><input class="header-field" name="name" type="text" value="{{item.name}}" placeholder="{{localize "lancer.placeholder.name"}}"/></h1>
      <input class="header-field" style="margin: 8px 2%; width: 96%;" name="item.system.role" type="text" value="{{item.system.role}}" placeholder="{{localize "lancer.placeholder.npc_class_role"}}"/>
    </div>
    {{{ ref-portrait-img item.img "img" system.}}}
  </header>

  {{!-- Description --}}
  {{{textarea-card "DESCRIPTION" "system.info.flavor"}}}
  {{{textarea-card "TACTICS" "system.info.tactics"}}}

  {{!-- Frame Stats --}}
  <div class="card clipped wraprow quadruple">
    <div class="wraprow quadruple">
      {{{npc-clicker-stat-card "HULL" "system.base_stats" "hull"}}}
      {{{npc-clicker-stat-card "AGI" "system.base_stats" "agility"}}}
      {{{npc-clicker-stat-card "SYS" "system.base_stats" "systems"}}}
      {{{npc-clicker-stat-card "ENG" "system.base_stats" "engineering"}}}
      {{{npc-clicker-stat-card "ARMOR" "system.base_stats" "armor"}}}
      {{{npc-clicker-stat-card "HP" "system.base_stats" "hp"}}}
      {{{npc-clicker-stat-card "STRUCTURE" "system.base_stats" "structure"}}}
      {{{npc-clicker-stat-card "STRESS" "system.base_stats" "stress"}}}
      {{{npc-clicker-stat-card "EVASION" "system.base_stats" "evade"}}}
      {{{npc-clicker-stat-card "E-DEFENSE" "system.base_stats" "edef"}}}
      {{{npc-clicker-stat-card "HEAT" "system.base_stats" "heatcap"}}}
      {{{npc-clicker-stat-card "SPEED" "system.base_stats" "speed"}}}
      {{{npc-clicker-stat-card "ACTIVATIONS" "system.base_stats" "activations"}}}
      {{{npc-clicker-stat-card "SENSORS" "system.base_stats" "sensor"}}}
      {{{npc-clicker-stat-card "SAVE" "system.base_stats" "save"}}}
      {{{npc-clicker-stat-card "SIZE" "system.base_stats" "size"}}}
    </div>
  </div>

  <div class="flexcol tags-container" style="margin: 10px;">
    <div class="lancer-title">
      <span class="major">BASE FEATURES</span>
    </div>

    {{{item-preview-list "base_features" "npc_feature" "doc"}}}
  </div>

  <div class="flexcol tags-container" style="margin: 10px;">
    <div class="lancer-title">
      <span class="major">OPTIONAL FEATURES</span>
    </div>

    {{{item-preview-list "optional_features" "npc_feature" "doc"}}}
  </div>

</form>
